/* PREVIOUS BUTTON LIGHBOX */
.cbp-popup-lightbox .cbp-popup-prev {
  background: url(<%= image_path 'cbp-sprite.png' %>) no-repeat scroll 0 0 transparent;}
/* PREVIOUS BUTTON SINGLEPAGE */
.cbp-popup-singlePage .cbp-popup-prev {
  background: url(<%= image_path 'cbp-sprite.png' %>) no-repeat scroll 0 -92px transparent;}
/* NEXT BUTTON LIGHTBOX */
.cbp-popup-lightbox .cbp-popup-next {
  background: url(<%= image_path 'cbp-sprite.png' %>) no-repeat scroll -46px 0 transparent;}
/* NEXT BUTTON SINGLEPAGE */
.cbp-popup-singlePage .cbp-popup-next {
  background: url(<%= image_path 'cbp-sprite.png' %>) no-repeat scroll -46px -92px transparent;}
/* CLOSE BUTTON LIGTHBOX */
.cbp-popup-lightbox .cbp-popup-close {
  background: url(<%= image_path 'cbp-sprite.png' %>) no-repeat scroll -92px 0 transparent;}
/* CLOSE BUTTON SINGLEPAGE */
.cbp-popup-singlePage .cbp-popup-close {
  background: url(<%= image_path 'cbp-sprite.png' %>) no-repeat scroll -92px -92px transparent;}
.cbp-popup-singlePageInline .cbp-popup-close {
  background: url(<%= image_path 'cbp-sprite.png' %>) no-repeat scroll -92px 0 transparent;}
.cbp-nav-prev:after {
  background: url(<%= image_path 'cbp-sprite.png' %>) no-repeat;}
.cbp-slider .cbp-nav-next:after,
.cbp-slider .cbp-nav-prev:after {
  background: url(<%= image_path 'cbp-sprite.png' %>) no-repeat;}
.cbp-slider-edge .cbp-nav-next:after,
.cbp-slider-edge .cbp-nav-prev:after {
  background: url(<%= image_path 'cbp-sprite.png' %>) no-repeat;}
.cbp-slider-next:after,
.cbp-slider-prev:after {
  background: url(<%= image_path 'cbp-sprite.png' %>) no-repeat;}
